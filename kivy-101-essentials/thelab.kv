<CanvasExample3>:
    canvas:
        # Color is set to RED here. So all the code after this will be 'RED' colored
        Color:
            rgba: 1, 0, 0, .3
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (500, 300, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 4
        # Color is set to BLUE here. So all the code after this will be 'BLUE' colored
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (800, 100, 300, 200) # x, y, w, h
            width: 2


